# FlakeGuard Configuration
# Copy this file to .env and customize for local development

# Database Connection (REQUIRED)
# PostgreSQL connection string
FG_DATABASE_DSN=postgres://flakeguard:flakeguard@localhost:5432/flakeguard?sslmode=disable

# JWT Secret (REQUIRED, minimum 32 bytes)
# Generate with: openssl rand -base64 32
FG_JWT_SECRET=dev-secret-minimum-32-bytes-required-for-jwt-signing

# HTTP Server Address (default: :8080)
# Format: :port or host:port
FG_HTTP_ADDR=:8080

# Log Level (default: info)
# Options: debug, info, warn, error
FG_LOG_LEVEL=info

# Environment (default: prod)
# Options: dev, prod
# When set to 'dev', migrations auto-run on startup
FG_ENV=dev

# Session Duration (default: 7)
# Number of days a session cookie remains valid
FG_SESSION_DAYS=7

# Rate Limiting (default: 120)
# Requests per minute allowed per API key
FG_RATE_LIMIT_RPM=120

# Upload Limits
# Maximum total upload size in bytes (default: 5242880 = 5MB)
FG_MAX_UPLOAD_BYTES=5242880

# Maximum single file size in bytes (default: 1048576 = 1MB)
FG_MAX_FILE_BYTES=1048576
